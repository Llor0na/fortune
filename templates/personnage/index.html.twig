{% extends 'base.html.twig' %}

{% block title %}Personne index{% endblock %}

{% block body %}
    <h1>Personne index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Telephone</th>
                <th>DateDeNaissance</th>
                <th>Job</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for personne in personnes %}
            <tr>
                <td>{{ personne.id }}</td>
                <td>{{ personne.nom }}</td>
                <td>{{ personne.prenom }}</td>
                <td>{{ personne.telephone }}</td>
                <td>{{ personne.DateDeNaissance ? personne.DateDeNaissance|date('Y-m-d') : '' }}</td>
                <td>{{ personne.job }}</td>
                <td>
                    <a href="{{ path('app_personnage_show', {'id': personne.id}) }}">show</a>
                    <a href="{{ path('app_personnage_edit', {'id': personne.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <button style="background-color:orange"><a href="{{ path('app_personnage_new') }}">Create new</a></button>
{% endblock %}
